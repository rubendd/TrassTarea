<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/Descripcion"
        android:textAlignment="center"
        android:textSize="30sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="121dp">

        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:gravity="start|top"
            android:hint="@string/hintDescription"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:textColorHint="#8D6E63" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bot贸n con Etiqueta para Imagen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/imagen"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="99dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:text="Imagen"
                android:textColor="#00796B" />

            <TextView
                android:id="@+id/labelImagen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="@string/ruta_de_la_imagen"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Bot贸n con Etiqueta para Audio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/audio"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:text="Audio"
                android:textColor="#00796B" />

            <TextView
                android:id="@+id/labelAudio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="@string/ruta_del_audio"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Bot贸n con Etiqueta para Video -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/video"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="2dp"
                android:text="Video"
                android:textColor="#00796B" />

            <TextView
                android:id="@+id/labelVideo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="@string/ruta_del_video"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Bot贸n con Etiqueta para Documento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/documento"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="112dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="2dp"
                android:onClick="onSelectDocumentClick"
                android:text="Documento" />

            <TextView
                android:id="@+id/labelDocumento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="@string/ruta_del_documento"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="90dp">

        <Button
            android:id="@+id/back"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="130dp"
            android:text="@string/volver"
            android:textColor="#00796B" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/create"
            android:layout_width="91dp"
            android:layout_height="74dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/button" />

    </LinearLayout>
</LinearLayout>
